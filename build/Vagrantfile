# -*- mode: ruby -*-
# vi: set ft=ruby :

# See https://github.com/vagrant-libvirt/vagrant-libvirt
ENV['VAGRANT_DEFAULT_PROVIDER'] = 'libvirt'
ENV["LC_ALL"] = "en_US.UTF-8"

Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2004"
  config.vm.box_check_update = true

  config.vm.provider "libvirt" do |libvirt|
      libvirt.memory = "2048"
      # Number of virtual cpus
      libvirt.cpus = 2
      # Physical cpus to which the vcpus can be pinned
      # libvirt.cpuset = '1-4,^3,6'
    end

  config.vm.define "build-kube" do |kube|
    kube.vm.hostname = "build-kube"
    # kube.vm.network "private_network", ip: "192.168.0.1"
  end
end
